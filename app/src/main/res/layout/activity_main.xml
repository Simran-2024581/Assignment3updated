<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F7F3FF">

    <!-- TOP LOGO -->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/brewbytelogo"
        android:contentDescription="@string/logo_desc"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#3D2A4F"
        android:layout_marginBottom="16dp" />

    <!-- SCROLL AREA (MENU ITEMS) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CAPPUCCINO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_cappuccino"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#3A2F45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_cappuccino"
                    android:textSize="15sp"
                    android:textColor="#6A5A7E"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnAddCappuccino"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/btn_add"
                    android:backgroundTint="#7752FE"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- TEA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_tea"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#3A2F45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_tea"
                    android:textSize="15sp"
                    android:textColor="#6A5A7E"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnAddTea"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/btn_add"
                    android:backgroundTint="#7752FE"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- SANDWICH -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_sandwich"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#3A2F45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_sandwich"
                    android:textSize="15sp"
                    android:textColor="#6A5A7E"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnAddSandwich"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/btn_add"
                    android:backgroundTint="#7752FE"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- PASTRY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_pastry"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#3A2F45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_pastry"
                    android:textSize="15sp"
                    android:textColor="#6A5A7E"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnAddPastry"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/btn_add"
                    android:backgroundTint="#7752FE"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- VIEW CART BUTTON -->
    <Button
        android:id="@+id/btnCart"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_cart"
        android:backgroundTint="#5C3AFF"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- MAP BUTTON (same ID as before) -->
    <Button
        android:id="@+id/btnMap"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_find_us"
        android:backgroundTint="#5C3AFF"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- CAMERA BUTTON (same ID as before) -->
    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_open_camera"
        android:backgroundTint="#5C3AFF"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

    <!-- BOTTOM NAV STAYS AT BOTTOM -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E0D5FF"
        app:menu="@menu/bottom_nav" />

</LinearLayout>
