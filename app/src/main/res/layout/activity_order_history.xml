<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#F5F1FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="@string/back_button"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#7A5AFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/order_history_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#3C2A5E" />
        </LinearLayout>

        <!-- Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/previous_orders_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5A4B7A"
            android:layout_marginTop="8dp"
            android:paddingBottom="6dp" />

        <!-- Order History Content -->
        <TextView
            android:id="@+id/txtHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#403355"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="4dp" />

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:background="#D9CCFF"
            app:menu="@menu/bottom_nav" />

    </LinearLayout>

</ScrollView>
