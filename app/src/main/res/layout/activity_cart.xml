<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/coffeeCream">

    <!-- Top Row: Back Button + Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/back"
            android:background="@drawable/rounded_btn"
            android:textColor="@color/coffeeButtonText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cart_title"
            android:textStyle="bold"
            android:textColor="@color/coffeeDark"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- Cart Items Box -->
    <TextView
        android:id="@+id/txtCartItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="14dp"
        android:background="@drawable/rounded_card"
        android:text="@string/cart_empty"
        android:textColor="@color/coffeeDark" />

    <!-- Total Price -->
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/cart_total_default"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/coffeeBrown" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnClearCart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/btn_clear_cart"
            android:background="@drawable/rounded_btn"
            android:textColor="@color/coffeeCream" />

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="@string/btn_checkout"
            android:background="@drawable/rounded_btn"
            android:textColor="@color/coffeeCream" />
    </LinearLayout>

</LinearLayout>
